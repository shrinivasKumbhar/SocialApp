<body style ="background-color: #6eb8f4;">

	<div class="row" style ="border-bottom: 1px solid black; padding-bottom: 5px; background-color: #286090;">
		
	  <div class="col-md-5">&nbsp</div>
	  <%= form_for @user, :url => {:action => "login" } do |f| %>
	  <div class="col-md-1"><label class="control-label" style ="color: #fff;">Email</label></div>
	  <div class="col-md-2"><%= f.text_field :email, :class => "form-control", :id => "login_email", :placeholder => "Email" %> </div>
	  <div class="col-md-1"><label class="control-label" style="color: #fff;">Password</label></div>
	  <div class="col-md-2"><%= f.password_field :password, :class => "form-control", :id => "password", :placeholder => "Password" %></div>
	  <div class="col-md-1">
	   	<button type="submit" class="btn btn-primary">Login</button>
	  </div>
	  <% end %>
	</div>
	<div class="row" style="background-color: #6eb8f4; height: 100%;">
		<div class="col-md-8" style ="color: #fff; text-align: center; font-size: 70px; padding-top: 90px;">
			SOCIAL APP
		</div>
		<div class="col-md-4" style="border: 1px solid #f3f3f3;padding: 20px;">
			<%= form_for :user, url: users_path, :id => "registrationForm", :name => "registrationForm" do |f| %>
				<div class="form-group registrationFormGroup">
					<label class="col-sm-5 control-label registrationFormLabel">Name</label>
					<div class="col-sm-7">
						<%= f.text_field :name, :class => "form-control", :id => "name", :placeholder => "Name" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel" >Email</label>
					<div class="col-sm-7">
						<%= f.text_field :email, :class => "form-control", :id => "email", :placeholder => "Email" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Mobile No</label>
					<div class="col-sm-7">
						<%= f.text_field :mobile_no, :class => "form-control", :id => "mobileNo", :placeholder => "Mobile No" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Gender</label>
					<div class="col-sm-7">
					  <%= f.text_field :gender, :class => "form-control", :id => "gender", :placeholder => "Gender" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Address</label>
					<div class="col-sm-7">
					  <%= f.text_field :address, :class => "form-control", :id => "address", :placeholder => "Address" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Password</label>
					<div class="col-sm-7">
					  <%= f.password_field :password, :class => "form-control", :id => "password", :placeholder => "Password" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Confirm Password</label>
					<div class="col-sm-7">
					  <%= f.password_field :confirmPassword, :class => "form-control", :id => "confirmPassword", :placeholder => "Confirm Password" %>
					</div>
				</div>
				<div class="form-group registrationFormGroup">
					<label  class="col-sm-5 control-label registrationFormLabel">Profile Pic</label>
					<div class="col-sm-7">
					  <%= f.file_field :photo, :class => "form-control" %>
					</div>
				</div>
				
				<div class="form-group registrationFormGroup">
					<div class="col-sm-7">&nbsp</div>
					<div class="col-sm-5">
						<button type ="submit" id ="registrationFormSubmit" class="btn btn-success">Sign up</button>
					</div>
				</div>
			<% end %>	
		</div>
	</div>
</body>